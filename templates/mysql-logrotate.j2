/var/log/mysql/*.log {
    daily
    missingok
    rotate {{ wordpress_logrotate_retention | default('30') }}
    compress
    delaycompress
    notifempty
    sharedscripts
    copytruncate
    
    postrotate
        # Reload MySQL logs
        if [ -x /usr/bin/mysqladmin ]; then
            /usr/bin/mysqladmin --defaults-file=/root/.my.cnf flush-logs
        fi
    endscript
}