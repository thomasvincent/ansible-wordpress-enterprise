user {{ wordpress_system_user | default('www-data') }};
worker_processes {{ wordpress_nginx_worker_processes | default('auto') }};
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections {{ wordpress_nginx_worker_connections | default('1024') }};
    use epoll;
    multi_accept on;
}

http {
    ##
    # Basic Settings
    ##
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout {{ wordpress_nginx_keepalive_timeout | default('65') }};
    types_hash_max_size 2048;
    server_tokens {{ 'on' if wordpress_nginx_server_tokens | default(false) else 'off' }};
    
    # server_names_hash_bucket_size 64;
    # server_name_in_redirect off;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings
    ##
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    ##
    # Logging Settings
    ##
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
                    
    access_log {{ wordpress_nginx_access_log | default('/var/log/nginx/access.log') }} main;
    error_log {{ wordpress_nginx_error_log | default('/var/log/nginx/error.log') }};

    ##
    # Gzip Settings
    ##
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level {{ wordpress_nginx_gzip_level | default('6') }};
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/json
        application/xml+rss
        application/atom+xml
        image/svg+xml;

    ##
    # Virtual Host Configs
    ##
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;

    ##
    # Buffer sizes
    ##
    client_max_body_size {{ wordpress_nginx_client_max_body_size | default('64M') }};
    client_body_buffer_size {{ wordpress_nginx_client_body_buffer_size | default('128k') }};
    client_header_buffer_size {{ wordpress_nginx_client_header_buffer_size | default('1k') }};
    large_client_header_buffers {{ wordpress_nginx_large_client_header_buffers | default('4 4k') }};

    ##
    # Rate limiting
    ##
    {% if wordpress_nginx_rate_limiting | default(false) %}
    limit_req_zone $binary_remote_addr zone=wp_limit:10m rate={{ wordpress_nginx_rate_limit | default('10r/m') }};
    {% endif %}
}